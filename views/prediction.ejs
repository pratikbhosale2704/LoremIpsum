        <form
          action="/predict-campaign"
          method="POST"
          enctype="multipart/form-data"
          class="space-y-6"
        >
          <div class="text-left">
            <label for="combinedData" class="block text-lg font-medium mb-2"
              >Upload Combined Campaign and Demographics Data (CSV)</label
            >
            <input
              type="file"
              id="combinedData"
              name="combinedData"
              accept=".csv"
              class="w-full p-3 text-black border border-gray-300 rounded-lg"
              required
            />
            <p class="text-sm text-gray-500 mt-2">
              Please upload a CSV file containing both campaign performance
              metrics and customer demographics.
              <br />
              Example columns:
              <code
                >Campaign ID, Engagement Rate, Conversion Rate, Revenue,
                Customer ID, Age, Gender, Location, Income Level</code
              >.
            </p>
          </div>

          <button
            type="submit"
            class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition duration-300"
          >
            Predict Campaign Success
          </button>
        </form>

        <!-- Display Prediction Results -->
        <% if (predictionResult) { %>
        <div class="mt-8 p-6 bg-blue-50 rounded-lg" id="black-color">
          <h3 class="text-2xl font-semibold mb-4">Prediction Results</h3>
          <p class="text-lg">
            The predicted success rate for your campaign is:
            <span class="font-bold text-600"><%= predictionResult %>%</span>
          </p>
        </div>
        <% } %>
